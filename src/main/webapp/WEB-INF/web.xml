<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>librarysystem.com</display-name>
  
<servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.servlets.LoginServlet</servlet-class>
</servlet>
 <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/librarysystem.com/login</url-pattern>  
</servlet-mapping>

<servlet>
    <servlet-name>signup</servlet-name>
    <servlet-class>com.servlets.SignUpServlet</servlet-class>
</servlet>
 <servlet-mapping>
    <servlet-name>signup</servlet-name>
    <url-pattern>/librarysystem.com/signup</url-pattern>  
</servlet-mapping>

<servlet>
    <servlet-name>book</servlet-name>
    <servlet-class>com.servlets.BookServlet</servlet-class>
</servlet>
 <servlet-mapping>
    <servlet-name>book</servlet-name>
    <url-pattern>/librarysystem.com/book/*</url-pattern>  
</servlet-mapping>

</web-app>